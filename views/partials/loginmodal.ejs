    <h1 class = "mid-header1" style = "font-size:40px;text-align:left"><span class="fa fa-sign-in"></span> Login</h1>

    <!-- show any messages that come back with authentication -->
    <% if (message.length) { %>
        <div class="reg-text1 alert alert-danger"><%= message %></div>
    <% } %>

    <!-- LOGIN FORM -->
    <form action="/login" method="post">
        <div class="form-group">
            <label style = "color:#EFF7F6;" class = "small-header1">Email</label>
            <input type="text" class="form-control" name="email">
        </div>
        <div class="form-group">
            <label style = "color:#EFF7F6;" class = "small-header1">Password</label>
            <input type="password" class="form-control" name="password">
        </div>

        <button type="submit" class="btn btn-warning btn-lg small-header1">Login</button>
    </form>

    <hr>

    <p class = "small-header1" style = "color:#EFF7F6;">Need an account? <a href="/signup">Signup</a></p>
    <p class = "small-header1"><a href = "/forgotpass">Forgot password?</a></p>
    <p class = "small-header1" style = "color:#EFF7F6;">Or go <a href="/">home</a>.</p>